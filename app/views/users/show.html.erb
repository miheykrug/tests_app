<%= provide(:title, "#{@user.first_name} #{@user.second_name}") %>
<div class="row">
  <aside class="span4">
    <section>
      <% if have_avatar? %>
        <div id="avatar">
          <%= avatar_for(@user, :thumb) %>
        </div>
      <% else %>
          <%= image_tag "mazda_logo.png", alt: "MAZDA" %>
      <% end %>
      <h1>
        <%= @user.first_name %> <%= @user.second_name %>
      </h1>
    </section>
  </aside>
</div>
<%= @user.email %>
